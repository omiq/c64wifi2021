1 REM POKE 53272,23
2 PRINT "{CLR}{WHITE}"
3 OPEN2,2,4,CHR$(8)+CHR$(0):REM OPEN THE SERIAL FROM USER PORT
4 PRINT#2,"ATE0"
5 FOR I = 1 TO 10
6 GET#2,S$
7 PRINT S$;
8 NEXT
9 REM MAIN LOOP
10 GET K$:REM GET FROM C64 KEYBOARD
